<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@drawable/ardoise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="80sp"
        android:paddingTop="20sp"
        android:textColor="#FFFFFF"
        android:textSize="145sp" />
    
    <Button
        android:id="@+id/buttonRejouer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
        android:background="@drawable/valider"/>

    <Button
        android:id="@+id/buttonNonRejouer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/buttonRejouer"
        android:background="@drawable/supprimer" />
    
</RelativeLayout>